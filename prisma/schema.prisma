datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Conversation {
  id        Int      @id @default(autoincrement())
  role      String
  text      String
  createdAt DateTime @default(now())
}

model Metric {
  id         Int      @id @default(autoincrement())
  name       String
  value      Float
  createdAt  DateTime @default(now())
  metadata   String?  // optional JSON string
}
